{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "max-len": [1, 160],
    "no-console": "off",
    "indent": [2, 2],
    "quotes": [2, "single", "avoid-escape"],
    "prefer-const": 1,
    "react/prefer-es6-class": 0,
    "react/jsx-filename-extension": 0,
    "react/jsx-indent": [2, 2],
    "no-unused-expressions": ["error", { "allowShortCircuit": true }],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "variables": false
      }
    ]
  }
}
